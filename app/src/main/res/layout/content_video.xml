<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_margin="3dp"
        android:paddingTop="8dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/webview"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btn_callBaby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_callbaby"
            android:onClick="buttonCallBaby"/>

        <ImageButton
            android:id="@+id/btn_hangUpBaby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_callBaby"
            android:src="@drawable/ic_hangupbaby"
            android:onClick="buttonHangup"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/webview"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/txtRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btn_hangUpBaby"
            android:layout_centerInParent="true"
            android:text="準備通話"
            android:textSize="25dp"/>

    </LinearLayout>


</RelativeLayout>
