<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/iconMusic"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_music"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音量:"
            android:textSize="50dp" />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar_volume"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/volume"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="50"/>

        <TextView
            android:id="@+id/value_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/seekbar_volume"
            android:text="50"
            android:textSize="35dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="音調:"
            android:textSize="50dp" />

        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/seekbar_tone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tone"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="50"/>

        <TextView
            android:id="@+id/value_tone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/seekbar_tone"
            android:text="50"
            android:textSize="35dp"/>

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2">

        <TableRow>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="速度:"
                    android:textSize="40dp" />

                <Spinner
                    android:id="@+id/spinner_speed"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/speed"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/timbre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音色:"
                    android:textSize="40dp" />

                <Spinner
                    android:id="@+id/spinner_timbre"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/timbre" />

            </RelativeLayout>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_save_change"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="儲存變更"
        android:textSize="25dp"
        android:background="@color/orange"
        android:onClick="buttonSave"/>


</LinearLayout>
